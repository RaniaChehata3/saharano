<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import atlantafx.base.theme.Styles?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="atlantafx.sampler.controller.NavbarController"
      styleClass="navbar"
      spacing="10" 
      alignment="CENTER_LEFT">
    
    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>
    
    <!-- Logo/Brand -->
    <Label text="Medical System" styleClass="navbar-brand"/>
    
    <Region HBox.hgrow="ALWAYS"/>
    
    <!-- User Information -->
    <HBox alignment="CENTER" spacing="5">
        <Label fx:id="userLabel" text=""/>
        <Label fx:id="roleLabel" styleClass="badge,accent" text=""/>
    </HBox>
    
    <!-- Logout Button -->
    <Button fx:id="logoutButton" 
            text="Logout" 
            styleClass="button-outlined" 
            onAction="#handleLogout">
        <graphic>
            <FontIcon iconLiteral="feather-log-out"/>
        </graphic>
    </Button>
    
</HBox> 